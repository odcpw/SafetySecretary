# Database connection string (Postgres recommended)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/safetysecretary

# Registry/control-plane database (orgs/users/sessions/audit)
REGISTRY_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/safetysecretary_registry

# Optional admin connection for provisioning tenant DBs
POSTGRES_ADMIN_URL=postgresql://postgres:postgres@localhost:5432/postgres

# OpenAI API key for llmService
OPENAI_API_KEY=sk-your-key

# Port for the HTTP server
PORT=4000

# Where uploaded attachments are stored (local disk MVP)
SAFETYSECRETARY_ATTACHMENTS_DIR=artifacts/attachments

# Maximum attachment upload size (bytes)
SAFETYSECRETARY_ATTACHMENT_MAX_BYTES=15728640

# Session configuration (beta defaults)
SAFETYSECRETARY_SESSION_COOKIE=ss_session
SAFETYSECRETARY_ADMIN_COOKIE=ss_admin_session
SAFETYSECRETARY_SESSION_TTL_HOURS=8
SAFETYSECRETARY_SESSION_REMEMBER_DAYS=10
# Optional cookie and CSRF settings
SAFETYSECRETARY_COOKIE_SAMESITE=lax
SAFETYSECRETARY_COOKIE_SECURE=false
SAFETYSECRETARY_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4000

# Optional one-time platform admin bootstrap token
SAFETYSECRETARY_ADMIN_BOOTSTRAP_TOKEN=change-me

# Demo/test login (read/write) - requires a dedicated demo org + database
# Set SAFETYSECRETARY_DEMO_LOGIN_ENABLED=true only in local/test environments.
SAFETYSECRETARY_DEMO_LOGIN_ENABLED=false
SAFETYSECRETARY_DEMO_ORG_SLUG=demo-org
SAFETYSECRETARY_DEMO_ORG_NAME=SafetySecretary Demo
SAFETYSECRETARY_DEMO_DB_URL=postgresql://postgres:postgres@localhost:5432/safetysecretary_demo
SAFETYSECRETARY_DEMO_STORAGE_ROOT=artifacts/demo-attachments
SAFETYSECRETARY_DEMO_USER_USERNAME=demo
SAFETYSECRETARY_DEMO_USER_EMAIL=demo@example.com
