{
  "name": "safetysecretary",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p .",
    "build:client": "npm run build --prefix frontend",
    "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:client": "npm run dev --prefix frontend",
    "start": "node dist/index.js",
    "lint": "tsc --noEmit",
    "lint:frontend": "npm run lint --prefix frontend",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:frontend": "npm run test --prefix frontend",
    "prepare": "prisma generate",
    "postinstall": "npm install --prefix frontend",
    "db:migrate": "prisma migrate deploy",
    "db:dev": "prisma migrate dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "openai": "^6.8.1",
    "pdfkit": "^0.17.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pdfkit": "^0.17.3",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
